%h1 Listing categories

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @categories.each do |category|
      %tr 
        %td= category.name
        %td= link_to 'Show', category,class: 'nav-link'
        %td= link_to 'Edit', edit_category_path(category),class: 'nav-link'
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },class: 'nav-link'

%br

= link_to 'New Category', new_category_path,class: 'nav-link'
