
.row.mt-3.pb-5
  .col
    .row
      .col-1#average_rate= my_imdb_style_rating_for @film, "rate"
      .col.d-flex.align-items-center
        %h1= @film.title
      -#   = rating_for @film, "rate", disable_after_rate: true, imdb_avg: true
