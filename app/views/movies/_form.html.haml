
= form_for @movie do |f|
  - if @movie.errors.any?
    .alert.alert-danger
      %h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
      %ul
        - @movie.errors.full_messages.each do |message|
          %li= message

  .row
    .col
      = f.label :title,class: "form-label"
      = f.text_field :title,class: "form-control"
  .row
    .col
      = f.label :content,class: "form-label"
      = f.text_area :content,class: "form-control",rows: 3
  .row
    .col
      = f.label :category,class: "form-label"
      = select_tag 'movie[category_id]', options_from_collection_for_select(@categories, "id", "name"), class:"form-select"
  .row
    .col
      = f.label :video, class: "form-label"
      = f.file_field :video, class: "form-control" 
  .row.my-2
    .col
      = f.submit 'Save', class: 'btn btn-primary'
